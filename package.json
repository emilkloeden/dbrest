{
  "name": "dbrest",
  "version": "1.0.0",
  "description": "A thin REST layer over a database schema",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "db:pull": "prisma db pull",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "generate:all": "npm run db:pull && npm run db:generate && npm run generate:zod && npm run generate:routes",
    "generate:zod": "tsx scripts/generate-zod.ts",
    "generate:routes": "tsx scripts/generate-routes.ts"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.0",
    "@prisma/client": "^5.6.0",
    "better-sqlite3": "^9.2.2",
    "fastify": "^4.24.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.9.0",
    "prisma": "^5.6.0",
    "tsx": "^4.1.0",
    "typescript": "^5.2.2",
    "zod-prisma-types": "^3.1.8"
  },
  "author": "emil.kloeden@gmail.com",
  "license": "UNLICENSED"
}
