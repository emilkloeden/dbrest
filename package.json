{
  "name": "dbrest",
  "version": "1.0.0",
  "description": "A thin REST layer over a database schema",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "db:pull": "prisma db pull",
    "db:camelize": "tsx scripts/camelize-prisma-models.ts",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "generate:all": "npm run db:pull && npm run db:camelize && npm run db:generate && npm run generate:zod && npm run generate:routes",
    "generate:zod": "tsx scripts/generate-zod.ts",
    "generate:routes": "tsx scripts/generate-routes.ts",
    "generate:example-db": "tsx scripts/generate-example-db.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^5.6.0",
    "better-sqlite3": "^9.2.2",
    "fastify": "^5.0.0",
    "fastify-type-provider-zod": "^5.0.2",
    "zod": "^4.0.5",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.9.0",
    "change-case": "^5.4.4",
    "prisma": "^5.6.0",
    "tsx": "^4.1.0",
    "typescript": "^5.2.2",
    "zod-prisma-types": "^3.1.8"
  },
  "author": "emil.kloeden@gmail.com",
  "license": "UNLICENSED"
}
